<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VidioAi Studio: Domain Specific</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root { --bg-app: #000000; --bg-panel: #111111; --border: #333333; --text-main: #f5f5f7; }
        body { background-color: var(--bg-app); color: var(--text-main); font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; }
        ::-webkit-scrollbar { width: 6px; height: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #333; border-radius: 3px; }
        
        .mode-badge { font-size: 0.6rem; text-transform: uppercase; letter-spacing: 0.05em; padding: 2px 6px; border-radius: 4px; font-weight: 700; }
        .badge-auto { background: rgba(220, 38, 38, 0.2); color: #ef4444; border: 1px solid rgba(220, 38, 38, 0.3); }
        .badge-product { background: rgba(59, 130, 246, 0.2); color: #60a5fa; border: 1px solid rgba(59, 130, 246, 0.3); }
        .badge-tech { background: rgba(255, 255, 255, 0.1); color: #ffffff; border: 1px solid rgba(255, 255, 255, 0.3); } 
        .badge-cine { background: rgba(168, 85, 247, 0.2); color: #c084fc; border: 1px solid rgba(168, 85, 247, 0.3); }

        .tab-active { border-bottom: 2px solid #3b82f6; color: white; }
        .tab-inactive { color: #6b7280; hover:text-gray-300; }
        
        @keyframes scanline { 0% { transform: translateY(-100%); } 100% { transform: translateY(100%); } }
        .veo-scan { position: absolute; inset: 0; background: linear-gradient(to bottom, transparent 40%, rgba(168, 85, 247, 0.2) 50%, transparent 60%); animation: scanline 2s infinite linear; pointer-events: none; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useMemo, useRef } = React;

        // --- 1. TARGET MODELS ---
        const TARGET_MODELS = [
            { id: "nano_banana", label: "Nano Banana 3 Pro", desc: "Native Image Generator. Maximum Fidelity.", type: "image" },
            { id: "veo", label: "Google Veo (Video)", desc: "Optimized Motion Script for Video Generation.", type: "video" },
            { id: "imagen", label: "Imagen 3 (Standard)", desc: "Best for Google tools.", type: "image" },
            { id: "midjourney", label: "Midjourney v6", desc: "--v 6.0 --style raw", type: "image" },
            { id: "dalle3", label: "DALL-E 3", desc: "Natural Language", type: "image" },
            { id: "runway", label: "Runway Gen-2", desc: "General Video", type: "video" }
        ];

        const CAMERA_MOVES = [
            { id: "static", label: "Static Tripod", desc: "No movement. Focus on subject internal motion." },
            { id: "dolly_in", label: "Slow Dolly In", desc: "Camera pushes forward. Increases intensity." },
            { id: "dolly_out", label: "Dolly Out (Reveal)", desc: "Camera pulls back to reveal context." },
            { id: "truck_follow", label: "Truck / Tracking", desc: "Camera moves alongside subject (Side View)." },
            { id: "orbit", label: "Orbital Arc", desc: "Camera circles around the product/subject." },
            { id: "crane_up", label: "Crane Up", desc: "Vertical rise. Epic establishing shot." },
            { id: "handheld", label: "Handheld (Organic)", desc: "Subtle shake. Adds realism/chaos." }
        ];

        const ASPECT_RATIOS = [
            { id: "16:9", label: "16:9 (Cinema)", desc: "Standard widescreen." },
            { id: "9:16", label: "9:16 (Social)", desc: "Vertical for TikTok/Reels/Shorts." },
            { id: "2.39:1", label: "2.39:1 (Anamorphic)", desc: "Ultra-wide blockbuster look." }
        ];

        // --- DOMAINS ---
        const DOMAINS = {
            cine: {
                id: 'cine', label: 'Cinematic / Veo', icon: 'fa-film', color: 'purple', type: 'video',
                placeholder: "Describe the Action: e.g. The car speeds away, dust kicking up...",
                sensors: [{ id: "alexa", label: "ARRI Alexa 65", desc: "Hollywood standard. Soft highlight rolloff." }, { id: "red", label: "RED V-Raptor 8K", desc: "Sharp, high dynamic range." }],
                lenses: [{ id: "anamorphic", label: "Panavision Anamorphic", desc: "Cinematic flares, oval bokeh." }, { id: "wide", label: "12mm Ultra Wide", desc: "Epic scale." }],
                env: [{ id: "dystopia", label: "Sci-Fi Metropolis", desc: "Neon lights, rain." }, { id: "nature", label: "Icelandic", desc: "Moody nature." }, { id: "custom", label: "Custom World...", desc: "Type your own." }],
                lighting: [{ id: "teal", label: "Teal & Orange", desc: "Blockbuster." }, { id: "noir", label: "Film Noir", desc: "Shadows." }],
                details: [{ id: "wide_estab", label: "Establishing Shot", desc: "Setting the scene." }, { id: "custom", label: "Custom Framing...", desc: "Type your own." }]
            },
            tech: {
                id: 'tech', label: 'Tech Commercial', icon: 'fa-mobile-alt', color: 'gray', type: 'image',
                placeholder: "Describe the Product: e.g. Smart Watch with Titanium Band...",
                sensors: [{ id: "red_raptor", label: "RED V-Raptor 8K", desc: "Cinema sharpness." }],
                lenses: [{ id: "100mm", label: "100mm Macro", desc: "Texture focus." }],
                env: [{ id: "keynote", label: "Keynote Void", desc: "Pure black." }, { id: "custom", label: "Custom Scene...", desc: "Type your own." }],
                lighting: [{ id: "liquid", label: "Liquid Strip", desc: "Continuous highlights." }],
                details: [{ id: "hero_profile", label: "Hero Profile", desc: "Silhouette." }, { id: "custom", label: "Custom Framing...", desc: "Type your own." }]
            },
            auto: { 
                id: 'auto', label: 'Automotive', icon: 'fa-car', color: 'red', type: 'image',
                placeholder: "e.g. 1999 Honda Civic Type R EK9", 
                sensors: [{ id: "canon_r5", label: "Canon EOS R5", desc: "Sharp event look." }], 
                lenses: [{ id: "35mm", label: "35mm Context", desc: "Environment capture." }], 
                env: [{ id: "mt_lot", label: "Event Lot", desc: "Asphalt, harsh sun." }], 
                lighting: [{ id: "sun", label: "Hard Sun", desc: "High contrast." }], 
                details: [{ id: "hero", label: "3/4 Hero Shot", desc: "Standard front-corner angle." }] 
            },
            product: { 
                id: 'product', label: 'Product Design', icon: 'fa-cube', color: 'blue', type: 'image',
                placeholder: "e.g. Matte Black Coffee Maker", 
                sensors: [{ id: "hasselblad", label: "Hasselblad H6D", desc: "Color accuracy." }], 
                lenses: [{ id: "50mm", label: "50mm Prime", desc: "Natural view." }], 
                env: [{ id: "white", label: "Infinite White", desc: "E-commerce." }], 
                lighting: [{ id: "window", label: "Soft Window", desc: "Natural." }], 
                details: [{ id: "eye_level", label: "Eye Level Hero", desc: "Straight on." }] 
            }
        };

        // --- COMPONENTS ---

        const NavButton = ({ icon, label, active, onClick, color }) => (
            <button onClick={onClick} className={`w-full flex items-center space-x-3 px-3 py-2.5 rounded-md transition-all text-sm font-medium mb-1 ${active ? `bg-zinc-800 text-white border-l-2 border-${color}-500` : 'text-zinc-500 hover:text-zinc-300 hover:bg-zinc-900'}`}>
                <i className={`fas ${icon} w-5 text-center ${active ? `text-${color}-500` : ''}`}></i><span>{label}</span>
            </button>
        );

        const SpecSelect = ({ label, options, selected, onChange, color }) => (
            <div className="mb-4">
                <label className="block text-[10px] font-bold text-zinc-500 uppercase mb-1.5">{label}</label>
                <div className="relative">
                    <select value={selected?.id} onChange={(e) => onChange(options.find(o => o.id === e.target.value))} className={`w-full bg-black border border-zinc-800 rounded px-3 py-2 text-sm text-zinc-300 focus:border-${color}-500 outline-none appearance-none transition-colors hover:border-zinc-700`}>
                        {options && options.map(opt => <option key={opt.id} value={opt.id}>{opt.label}</option>)}
                    </select>
                    <div className="absolute right-3 top-2.5 pointer-events-none text-zinc-600 text-xs"><i className="fas fa-chevron-down"></i></div>
                </div>
                {selected?.desc && <p className="text-[10px] text-zinc-600 mt-1 pl-1 truncate">{selected.desc}</p>}
            </div>
        );

        // --- MAIN APP ---

        const App = () => {
            const apiKey = ""; 
            
            // --- STATE ---
            const [domain, setDomain] = useState(DOMAINS.cine);
            const [targetModel, setTargetModel] = useState(TARGET_MODELS[0]); 
            
            // Core Inputs
            const [subject, setSubject] = useState("");
            const [refImage, setRefImage] = useState(null);
            
            // Video Specifics
            const [cameraMove, setCameraMove] = useState(CAMERA_MOVES[1]); 
            const [motionScale, setMotionScale] = useState(5);
            const [fps, setFps] = useState("24fps");
            
            // Visual Config
            const [sensor, setSensor] = useState(DOMAINS.cine.sensors[0]);
            const [lens, setLens] = useState(DOMAINS.cine.lenses[0]);
            const [env, setEnv] = useState(DOMAINS.cine.env[0]);
            const [customEnv, setCustomEnv] = useState("");
            const [customDetail, setCustomDetail] = useState("");
            const [aspectRatio, setAspectRatio] = useState(ASPECT_RATIOS[0]);
            
            const [detail, setDetail] = useState(DOMAINS.cine.details[0]);
            const [light, setLight] = useState(DOMAINS.cine.lighting[0]);

            // System
            const [generatedImage, setGeneratedImage] = useState(null);
            const [isProcessing, setIsProcessing] = useState(false);
            const [logs, setLogs] = useState(["System Ready. Gemini 3.0 Core Active."]);
            const [analyzedContext, setAnalyzedContext] = useState("");

            const addLog = (msg) => setLogs(prev => [`[${new Date().toLocaleTimeString()}] ${msg}`, ...prev]);

            // --- DOMAIN SWITCHING LOGIC ---
            useEffect(() => {
                const d = DOMAINS[domain.id] || DOMAINS.cine;
                
                if(d.sensors.length) setSensor(d.sensors[0]);
                if(d.lenses.length) setLens(d.lenses[0]);
                if(d.env.length) setEnv(d.env[0]);
                if(d.lighting?.length) setLight(d.lighting[0]);
                if(d.details?.length) setDetail(d.details[0]);
                
                setSubject("");
                setCustomEnv("");
                setCustomDetail("");
                setAnalyzedContext("");

                // TARGET MODEL ENFORCER
                if (domain.id === 'cine') {
                    setTargetModel(TARGET_MODELS.find(m => m.id === 'veo'));
                    addLog(`Domain: ${domain.label} -> Target: Google Veo`);
                } else {
                    setTargetModel(TARGET_MODELS.find(m => m.id === 'nano_banana'));
                    addLog(`Domain: ${domain.label} -> Target: Nano Banana 3 Pro`);
                }

            }, [domain.id]);

            const handleFile = (e) => {
                const f = e.target.files[0];
                if(f) { 
                    const r = new FileReader(); 
                    r.onload = () => {
                        setRefImage(r.result);
                        addLog("Image Uploaded.");
                    }; 
                    r.readAsDataURL(f); 
                }
            };

            // --- PROMPT ENGINE ---
            const finalPrompt = useMemo(() => {
                const visualBase = analyzedContext ? `[Visual Context: ${analyzedContext}]` : `[Subject: ${subject}]`;
                const cameraAction = `${cameraMove.label}, speed ${motionScale}/10`;
                const techSpecs = `Shot on ${sensor?.label}, ${lens?.label}, ${fps}, 8k resolution, cinematic lighting`;
                const envDesc = env.id === 'custom' ? customEnv : env.desc;
                const detailDesc = detail?.id === 'custom' ? customDetail : detail?.desc;

                // VEO LOGIC (VIDEO)
                if (domain.id === 'cine' || targetModel.id === 'veo') {
                    return `VIDEO PROMPT:\n\n${visualBase}\n\nACTION:\n${subject} ${envDesc}\n\nCAMERA:\n${cameraAction}\n\nSTYLE:\n${techSpecs}, photorealistic, high fidelity, temporal consistency.`;
                } 
                
                // IMAGE LOGIC (NANO BANANA / OTHERS)
                else {
                    return `**Subject:** ${subject}\n**Environment:** ${envDesc}\n**Lighting:** ${light?.desc}\n**Composition:** ${detailDesc}\n**Tech:** ${techSpecs}\n**Quality:** 8k, native resolution, commercial standard.`;
                }
            }, [subject, analyzedContext, cameraMove, motionScale, sensor, lens, fps, env, customEnv, customDetail, targetModel, light, detail, domain]);

            // --- GENERATION HANDLER ---
            const handleAction = async () => {
                setIsProcessing(true);
                
                try {
                    // 1. VISION ANALYSIS
                    if (refImage && !analyzedContext) {
                        addLog("Analyzing Frame (Gemini 3.0 Vision)...");
                        const prompt = "Describe this image in extreme detail for a generation prompt. Focus on lighting, texture, and spatial layout. Keep it under 50 words.";
                        
                        const res = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-3.0-pro:generateContent?key=${apiKey}`, {
                            method: 'POST', headers: {'Content-Type': 'application/json'},
                            body: JSON.stringify({ 
                                contents: [{ parts: [{ text: prompt }, { inlineData: { mimeType: "image/png", data: refImage.split(',')[1] } }] }] 
                            })
                        });
                        const data = await res.json();
                        const analysis = data.candidates?.[0]?.content?.parts?.[0]?.text;
                        if (analysis) {
                            setAnalyzedContext(analysis);
                            addLog("Analysis Complete. Prompt Optimized.");
                            setIsProcessing(false);
                            return; 
                        }
                    }

                    // 2. ACTION
                    if (targetModel.id === 'veo') {
                        addLog("Veo Prompt Ready. Copy from Console.");
                        setIsProcessing(false);
                    } else {
                        addLog("Generating Preview (Imagen 4.0)...");
                        const res = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/imagen-4.0-generate-001:predict?key=${apiKey}`, {
                            method: 'POST', headers: {'Content-Type': 'application/json'},
                            body: JSON.stringify({ instances: [{ prompt: finalPrompt }], parameters: { sampleCount: 1, aspectRatio: aspectRatio.id } })
                        });
                        const data = await res.json();
                        if(data.predictions?.[0]) {
                            setGeneratedImage(`data:image/png;base64,${data.predictions[0].bytesBase64Encoded}`);
                        }
                    }
                } catch (e) { addLog("Error: " + e.message); } 
                finally { setIsProcessing(false); }
            };

            return (
                <div className="flex h-screen bg-zinc-950 text-zinc-200 overflow-hidden font-sans">
                    
                    {/* LEFT: DOMAIN SELECTOR */}
                    <div className="w-64 border-r border-zinc-800 bg-black flex flex-col p-4">
                        <div className="mb-8 px-2 flex items-center gap-2">
                            <div className={`w-8 h-8 rounded flex items-center justify-center text-white font-bold bg-${domain.color}-600`}>V</div>
                            <div>
                                <h1 className="font-bold text-white tracking-tight">VidioAi <span className="font-light text-zinc-500">Studio</span></h1>
                                <span className={`mode-badge badge-${domain.id}`}>{domain.label}</span>
                            </div>
                        </div>

                        <div className="space-y-1 mb-8">
                            <p className="px-3 text-[10px] font-bold text-zinc-600 uppercase tracking-wider mb-2">Video Prompting</p>
                            <NavButton icon="fa-film" label="Cinematic / Veo" active={domain.id === 'cine'} onClick={() => setDomain(DOMAINS.cine)} color="purple" />
                            
                            <p className="px-3 text-[10px] font-bold text-zinc-600 uppercase tracking-wider mb-2 mt-6">Image Prompting</p>
                            <NavButton icon="fa-mobile-alt" label="Tech Commercial" active={domain.id === 'tech'} onClick={() => setDomain(DOMAINS.tech)} color="gray" />
                            <NavButton icon="fa-car" label="Automotive" active={domain.id === 'auto'} onClick={() => setDomain(DOMAINS.auto)} color="red" />
                            <NavButton icon="fa-cube" label="Product Design" active={domain.id === 'product'} onClick={() => setDomain(DOMAINS.product)} color="blue" />
                        </div>

                        <div className="mt-auto p-4 border-t border-zinc-900 space-y-4">
                            <SpecSelect label="Target Model (Auto-Selected)" options={TARGET_MODELS} selected={targetModel} onChange={setTargetModel} color={domain.color} />
                            <SpecSelect label="Aspect Ratio" options={ASPECT_RATIOS} selected={aspectRatio} onChange={setAspectRatio} color={domain.color} />
                        </div>
                    </div>

                    {/* MIDDLE: CONFIGURATION */}
                    <div className="w-[400px] border-r border-zinc-800 bg-zinc-900/50 flex flex-col min-h-0">
                        <div className="flex-1 overflow-y-auto p-6 space-y-6">
                            
                            {/* Upload Section */}
                            <div>
                                <div className="flex justify-between items-center mb-2">
                                    <label className="text-xs font-bold text-zinc-500 uppercase">1. {domain.id === 'cine' ? 'Starting Frame (Video)' : 'Reference Image'}</label>
                                    {analyzedContext && <span className="text-[10px] text-emerald-500 flex items-center gap-1"><i className="fas fa-check-circle"></i> Analyzed</span>}
                                </div>
                                <div className={`h-32 border-2 border-dashed ${refImage ? `border-${domain.color}-500/50 bg-${domain.color}-900/10` : 'border-zinc-700 bg-black/50'} rounded relative flex items-center justify-center overflow-hidden transition-all group`}>
                                    {refImage ? (
                                        <img src={refImage} className="w-full h-full object-cover opacity-80" />
                                    ) : (
                                        <div className="text-zinc-500 text-xs flex flex-col items-center">
                                            <i className="fas fa-upload text-2xl mb-2"></i>
                                            <span>Upload {domain.id === 'cine' ? 'Frame' : 'Reference'}</span>
                                        </div>
                                    )}
                                    <input type="file" onChange={handleFile} className="absolute inset-0 opacity-0 cursor-pointer" accept="image/*" />
                                </div>
                            </div>

                            {/* Description */}
                            <div>
                                <label className="text-xs font-bold text-zinc-500 uppercase mb-2 block">2. Description</label>
                                <textarea 
                                    value={subject} 
                                    onChange={(e) => setSubject(e.target.value)}
                                    className={`w-full h-24 bg-black border border-zinc-700 rounded p-3 text-sm focus:border-${domain.color}-500 outline-none resize-none transition-colors placeholder-zinc-700`}
                                    placeholder={domain.placeholder}
                                />
                            </div>

                            {/* VIDEO DIRECTOR CONTROLS (Only for Cine) */}
                            {domain.id === 'cine' && (
                                <div className="pt-4 border-t border-zinc-800">
                                    <div className="flex items-center gap-2 mb-4 text-xs font-bold text-zinc-400 uppercase"><i className="fas fa-video"></i> Veo Motion Control</div>
                                    <SpecSelect label="Camera Movement" options={CAMERA_MOVES} selected={cameraMove} onChange={setCameraMove} color={domain.color} />
                                    <div>
                                        <label className="flex justify-between text-[10px] font-bold text-zinc-500 uppercase mb-1">Motion Intensity: {motionScale}</label>
                                        <input type="range" min="1" max="10" value={motionScale} onChange={(e) => setMotionScale(e.target.value)} className="w-full accent-purple-500" />
                                    </div>
                                </div>
                            )}

                            {/* TECH SPECS (For All) */}
                            <div className="pt-4 border-t border-zinc-800">
                                <div className="flex items-center gap-2 mb-4 text-xs font-bold text-zinc-400 uppercase"><i className="fas fa-sliders-h"></i> Scene Config</div>
                                
                                <SpecSelect label="Environment" options={domain.env} selected={env} onChange={setEnv} color={domain.color} />
                                {env?.id === 'custom' && <textarea value={customEnv} onChange={(e) => setCustomEnv(e.target.value)} className="w-full h-16 bg-black border border-zinc-700 rounded p-2 text-sm text-white mb-4" placeholder="Describe scene..." />}
                                
                                {domain.id !== 'cine' && <SpecSelect label="Lighting Setup" options={domain.lighting} selected={light} onChange={setLight} color={domain.color} />}
                                {domain.id !== 'cine' && <SpecSelect label="Composition" options={domain.details} selected={detail} onChange={setDetail} color={domain.color} />}
                                {domain.id !== 'cine' && detail?.id === 'custom' && <textarea value={customDetail} onChange={(e) => setCustomDetail(e.target.value)} className="w-full h-16 bg-black border border-zinc-700 rounded p-2 text-sm text-white mb-4" placeholder="Describe angle..." />}
                                
                                <SpecSelect label="Virtual Sensor" options={domain.sensors} selected={sensor} onChange={setSensor} color={domain.color} />
                            </div>
                        </div>

                        <div className="p-6 border-t border-zinc-800 bg-zinc-900">
                            <button 
                                onClick={handleAction} 
                                disabled={isProcessing}
                                className={`w-full py-4 rounded-lg font-bold text-sm tracking-wide shadow-lg transition-all flex items-center justify-center gap-2
                                ${isProcessing ? 'bg-zinc-800 text-zinc-500 cursor-not-allowed' : `bg-${domain.color}-600 hover:bg-${domain.color}-500 text-white shadow-${domain.color}-900/20`}`}
                            >
                                {isProcessing ? <><i className="fas fa-circle-notch fa-spin"></i> PROCESSING...</> : (analyzedContext ? (domain.id === 'cine' ? "GENERATE VEO SCRIPT" : "GENERATE IMAGE") : "ANALYZE & GENERATE")}
                            </button>
                        </div>
                    </div>

                    {/* RIGHT: PREVIEW & CONSOLE */}
                    <div className="flex-1 flex flex-col min-w-0 bg-black">
                        
                        {/* VIEWPORT */}
                        <div className="flex-1 relative flex items-center justify-center bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-zinc-900 via-black to-black">
                            <div className="relative max-w-[90%] max-h-[85%] shadow-2xl rounded-lg overflow-hidden border border-zinc-800 bg-zinc-900 group">
                                {generatedImage || refImage ? (
                                    <>
                                        <img src={generatedImage || refImage} className="w-full h-full object-contain" />
                                        {/* Veo Overlay Visualization */}
                                        {targetModel.id === 'veo' && (
                                            <div className="absolute inset-0 veo-scan opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                        )}
                                        {targetModel.id === 'veo' && (
                                            <div className="absolute top-4 left-4 bg-purple-900/80 text-purple-200 text-[10px] font-bold px-2 py-1 rounded backdrop-blur">
                                                <i className="fas fa-video mr-1"></i> VEO STARTING FRAME
                                            </div>
                                        )}
                                    </>
                                ) : (
                                    <div className="w-[600px] h-[340px] flex flex-col items-center justify-center text-zinc-800">
                                        <i className={`fas ${domain.icon} text-6xl mb-4 opacity-20`}></i>
                                        <p className="font-mono text-xs uppercase tracking-widest opacity-50">Upload Frame or Generate</p>
                                    </div>
                                )}
                                {isProcessing && <div className="absolute inset-0 bg-black/80 flex items-center justify-center z-10 backdrop-blur-sm"><div className="text-center"><div className={`w-16 h-16 border-4 border-${domain.color}-600/30 border-t-${domain.color}-600 rounded-full animate-spin mb-4 mx-auto`}></div><p className={`text-${domain.color}-600 font-mono text-xs animate-pulse`}>PROCESSING...</p></div></div>}
                            </div>
                        </div>

                        {/* CONSOLE */}
                        <div className="h-48 border-t border-zinc-800 bg-zinc-900 flex flex-col font-mono text-[10px]">
                            <div className="px-4 py-2 border-b border-zinc-800 bg-zinc-900 text-zinc-500 flex justify-between items-center">
                                <span className="uppercase font-bold tracking-wider text-purple-400">Veo Prompt Terminal</span>
                                <button onClick={() => navigator.clipboard.writeText(finalPrompt)} className="hover:text-white flex items-center gap-2"><i className="fas fa-copy"></i> COPY</button>
                            </div>
                            <div className="flex-1 overflow-y-auto p-4 flex gap-4">
                                <div className="w-1/3 border-r border-zinc-800 pr-4">
                                    <strong className="block text-zinc-500 mb-2">SYSTEM LOGS</strong>
                                    {logs.map((log, i) => <div key={i} className="mb-1 text-zinc-400">{log}</div>)}
                                </div>
                                <div className="w-2/3">
                                    <strong className="block text-zinc-500 mb-2">GENERATED OUTPUT</strong>
                                    <p className={`text-${domain.color}-400/90 leading-relaxed whitespace-pre-wrap text-sm`}>{finalPrompt}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById("root"));
        root.render(<App />);
    </script>
</body>
</html>
